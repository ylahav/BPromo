                    name="samepage"
                    type="radio"
                    default="0"
                    label="MOD_BPROMO_SAMEPAGE_FIELD_LABEL"
                    description="MOD_BPROMO_SAMEPAGE_FIELD_DESC">
                    <option value="0">MOD_BPROMO_SAMEPAGE_YES</option>
                    <option value="1">MOD_BPROMO_SAMEPAGE_NO</option>
                </field>
                <field
                    name="image1"
                    type="media"
                    label="MOD_BPROMO_IMAGE1_FIELD_LABEL"
                    description="MOD_BPROMO_IMAGE1_FIELD_DESC" />
                <field
                    name="url1"
                    type="text"
                    default=""
                    label="MOD_BPROMO_URL1_FIELD_LABEL"
                    description="MOD_BPROMO_URL1_FIELD_DESC" />
